@model BloquesJuarez.Models.Categoria
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Editar">
    <input asp-for="Id" hidden />
    <div class="border p-3 main-container">

        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="form-group row">
            <h2 class="text-info">Editar Categoría</h2>
        </div>
        <hr />

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <label asp-for="NombreCategoria" class="form-label">Nombre de Categoría</label>
                    <input asp-for="NombreCategoria" class="form-control" />
                    <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-6 col-md-6">
                    <button type="submit" class="btn btn-primary form-control">Actualizar</button>
                </div>
                <div class="col-6 col-md-6">
                    <a asp-controller="Categoria" asp-action="Index" class="btn btn-secondary form-control">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</form>

<style>
    .main-container {
        padding: 20px; /* Ajusta el valor según tu preferencia */
        max-width: 600px; /* Ajusta el ancho máximo según tu preferencia */
        margin: 0 auto; /* Para centrar el contenido */
    }
</style>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

