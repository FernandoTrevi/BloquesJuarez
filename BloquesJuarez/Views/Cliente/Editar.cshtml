@model BloquesJuarez.Models.ViewModels.ClienteVM
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Editar">
    <input asp-for="Cliente.Id" hidden />

    <div class="border p-3 main-container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group text-center">
            <h2 class="text-info">Nuevo Cliente</h2>
        </div>
        <hr />

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Cliente.NombreCliente" class="form-label font-weight-bold">Nombre y apellido</label>
                    <input asp-for="Cliente.NombreCliente" class="form-control" />
                    <span asp-validation-for="Cliente.NombreCliente" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Cliente.Direccion" class="form-label font-weight-bold">Dirección</label>
                    <input asp-for="Cliente.Direccion" class="form-control" />
                    <span asp-validation-for="Cliente.Direccion" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <label asp-for="Cliente.Localidad" class="form-label font-weight-bold">Localidad</label>
                    <input asp-for="Cliente.Localidad" class="form-control" />
                    <span asp-validation-for="Cliente.Localidad" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Cliente.ProvinciaId" class="form-label font-weight-bold">Provincia</label>
                    <select asp-for="Cliente.ProvinciaId" asp-items="@Model.ProvinciaLista" class="form-select">
                        <option disabled selected>--Seleccione una Provincia</option>
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <label asp-for="Cliente.Telefono" class="form-label font-weight-bold">Teléfono</label>
                    <input asp-for="Cliente.Telefono" class="form-control" />
                    <span asp-validation-for="Cliente.Telefono" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <label asp-for="Cliente.CondIvaId" class="form-label font-weight-bold">C.F.IVA</label>
                    <select asp-for="Cliente.CondIvaId" asp-items="@Model.CondIvaLista" class="form-select">
                        <option disabled selected>--Seleccione una Condición</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label asp-for="Cliente.Cuit" class="form-label font-weight-bold">C.U.I.T.</label>
                    <input asp-for="Cliente.Cuit" class="form-control" />
                    <span asp-validation-for="Cliente.Cuit" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6 col-md-6">
                    <button type="submit" class="btn btn-primary form-control">Editar Cliente</button>
                </div>
                <div class="col-6 col-md-6">
                    <a asp-controller="Cliente" asp-action="Index" class="btn btn-secondary form-control">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</form>


<style>
    .main-container {
        padding: 20px; /* Ajusta el valor según tu preferencia */
        max-width: 800px; /* Ajusta el ancho máximo según tu preferencia */
        margin: 0 auto; /* Para centrar el contenido */
    }
</style>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


